public static int power(int base, int raise)
{

    if(raise == 0)
    {
        return 1;
    }
    else
    {
        return base*power(base, raise-1);
    }
}

public static void main(String[] args) 
{
    int base = 3;
    int raisedPower = 4;

    int poweredNumber = power(base, raisedPower);
    System.out.println(poweredNumber);
}
